@model IEnumerable<BigSchool_VoDucLoi.Models.Course>
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
        <ul>
            @foreach(var course in Model)
            {
                <li>
                    @course.DateTime- @course.Lecturer.Name
                </li>
            }
        </ul>
    <ul class="course">
        @foreach (var cource in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @cource.DateTime.ToString("MM")

                    </div>
                    <div class="day">
                        @cource.DateTime.ToString("dd")

                    </div>

                </div>
                <div class="details">
                    <span class="lecturer">
                        @cource.Lecturer.Name
                    </span>
                    <span class="category">
                        @cource.Category.Name
                    </span>

                </div>
            </li>
        }
    </ul>
</div>
